# Database Configuration
DATABASE_URL="postgresql://ayinelusers:12345@localhost:5432/ayineldb?schema=public"

# JWT Configuration
JWT_ACCESS_SECRET="your-super-secret-jwt-access-key-here"
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-key-here"
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:3002"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Rate Limiting Configuration
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=10
RATE_LIMIT_TTL_MEDIUM=600000
RATE_LIMIT_LIMIT_MEDIUM=100
RATE_LIMIT_TTL_LONG=3600000
RATE_LIMIT_LIMIT_LONG=1000

# File Upload Configuration
MAX_FILE_SIZE=100000000
UPLOAD_PATH="./uploads"

# S3 Configuration
S3_BUCKET_NAME="your-s3-bucket-name"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-s3-access-key"
S3_SECRET_ACCESS_KEY="your-s3-secret-key"
S3_ENDPOINT="https://s3.amazonaws.com"

# FFmpeg Configuration
FFMPEG_PATH="/usr/bin/ffmpeg"

# Media Processing
CLOUDFLARE_STREAM_TOKEN="your-cloudflare-stream-token"
MUX_TOKEN_ID="your-mux-token-id"
MUX_TOKEN_SECRET="your-mux-token-secret"

# Payment Gateway Configuration

# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# PayPal
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_ENVIRONMENT="sandbox" # or "live"

# Cash App
CASHAPP_CLIENT_ID="your_cashapp_client_id"
CASHAPP_CLIENT_SECRET="your_cashapp_client_secret"
CASHAPP_ENVIRONMENT="sandbox" # or "live"

# Google Pay
GOOGLEPAY_MERCHANT_ID="your_googlepay_merchant_id"
GOOGLEPAY_ENVIRONMENT="test" # or "production"

# Apple Pay
APPLEPAY_MERCHANT_ID="your_applepay_merchant_id"
APPLEPAY_ENVIRONMENT="sandbox" # or "production"

# Venmo
VENMO_CLIENT_ID="your_venmo_client_id"
VENMO_CLIENT_SECRET="your_venmo_client_secret"
VENMO_ENVIRONMENT="sandbox" # or "live"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Analytics and Monitoring
SENTRY_DSN="your_sentry_dsn"
GOOGLE_ANALYTICS_ID="your_ga_id"
