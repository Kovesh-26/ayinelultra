# AYINEL Platform Environment Configuration

# Node Environment
NODE_ENV=development

# Database Configuration (PostgreSQL with pgAdmin4)
DATABASE_URL=postgresql://ayineluser:ayinelpass@localhost:5432/ayinel_db?schema=public
SHADOW_DATABASE_URL=postgresql://ayineluser:ayinelpass@localhost:5432/ayinel_db_shadow?schema=public

# Redis Configuration (for queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES=900
JWT_REFRESH_EXPIRES=604800

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000

# OAuth Configuration
OAUTH_GOOGLE_ID=your-google-oauth-client-id
OAUTH_GOOGLE_SECRET=your-google-oauth-client-secret
OAUTH_APPLE_ID=your-apple-oauth-client-id
OAUTH_APPLE_SECRET=your-apple-oauth-client-secret

# Media Pipeline (Mux or Cloudflare Stream)
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret
# CLOUDFLARE_STREAM_TOKEN=your-cloudflare-stream-token

# Storage Configuration (S3/R2)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_BUCKET=ayinel-media
S3_REGION=us-east-1

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_CONNECT_CLIENT_ID=ca_your-stripe-connect-client-id
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Analytics and Monitoring
POSTHOG_KEY=your-posthog-key
SENTRY_DSN=your-sentry-dsn

# Email Configuration (SendGrid)
EMAIL_FROM=noreply@ayinel.com
SENDGRID_KEY=your-sendgrid-api-key
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
AI_PROVIDER=openai

# Feature Flags
AYINEL_FEATURE_KIDZONE=true
AYINEL_FEATURE_AI_TOOLS=true
AYINEL_FEATURE_LIVE_STREAMING=true
AYINEL_FEATURE_MONETIZATION=true

# Media Configuration
MEDIA_ROOT=./uploads
PUBLIC_MEDIA_BASE_URL=http://localhost:3001/uploads
MAX_FILE_SIZE=1073741824
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv,flv,webm
ALLOWED_AUDIO_TYPES=mp3,wav,flac,aac,ogg
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# Development
DEBUG=true
LOG_LEVEL=debug
